@model IEnumerable<Eindproject_BePact.Models.Activiteit>

@{
    ViewBag.Title = "Activiteiten";
}

<h2>Alle activiteiten</h2>

<p>
    @Html.ActionLink("Nieuwe activiteit", "Create", "Activiteiten", null, new { @class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActiviteitType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ActiviteitType)
        </td>
        <td class="text-right">
            @Html.ActionLink("Aanpassen", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
