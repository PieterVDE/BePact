@model Eindproject_BePact.Models.Bedrijf

@{
    ViewBag.Title = "Details Bedrijf";
}

<h2>Details @Html.DisplayFor(model => model.Naam)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefoonnr)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefoonnr)
        </dd>
    </dl>
    <hr />
    <h4>Personen binnen dit bedrijf</h4>
    <table class="table table-responsive table-striped table-hover">
        <tr>
            <th>Naam</th>
            <th>Aangeboden Activiteiten</th>
        </tr>
        @foreach (var p in Model.Personen)
        {
            <tr>
                <td>
                    @Html.DisplayFor(pItem => p.Naam)
                </td>
                <td>
                    @foreach (var a in p.PersoonActiviteiten)
                    {
                        @Html.DisplayFor(aItem => a.Activiteit.ActiviteitType) 
                        <span>, </span>
                    }
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
